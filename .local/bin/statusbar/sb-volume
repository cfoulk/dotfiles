#! /bin/sh


MUTED=$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | awk '{ print $3 }')
VOL=$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | awk '{ print $2 }' | sed 's/\.//g' | sed 's/^0\{1,2\}//')

[ "$MUTED" = "[MUTED]" ] && echo "ðŸ”‡ $VOL%" && exit 

case 1 in 
    $((VOL >= 70)) ) ICON="ðŸ”Š" ;;
    $((VOL >= 30)) ) ICON="ðŸ”‰" ;;
    $((VOL >= 1)) )  ICON="ðŸ”ˆ" ;;
    * ) echo "ðŸ”‡ $VOL" && exit ;; 
esac
echo "$ICON $VOL%"
