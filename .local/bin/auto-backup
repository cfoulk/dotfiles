#!/bin/sh
usb="D70C-74A5" # UUID FOR MY USB

if sudo mount UUID="$usb" /mnt/usb 2> /dev/null; then
    notify-send "Mounting Successful!" 

    sudo cp /home/charlie/docs/2023.xlsx /mnt/usb/
    sudo cp /home/charlie/docs/count.xlsx /mnt/usb/

    sudo umount UUID="$usb"
    notify-send "Files successfully backed-up! Umounted."
else
    notify-send "ðŸ›‘ERROR: Mounting UnsuccessfulðŸ›‘" 
fi
